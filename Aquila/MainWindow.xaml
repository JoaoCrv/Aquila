<Window x:Class="Aquila.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aquila"
        mc:Ignorable="d"
        Title="Aquila" Height="450" Width="800">

    <DockPanel LastChildFill="True">
        <DockPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </DockPanel.Background>
        <!-- Versão no canto inferior esquerdo -->
        <TextBlock x:Name="versionTextBlock"
                   DockPanel.Dock="Bottom"
                   Margin="10"
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Left"
                    />
        <!-- Barra de carregamento -->
        <ProgressBar x:Name="loadingBar"
                 Height="4"
                 DockPanel.Dock="Top"
                 IsIndeterminate="True"
                 Visibility="Collapsed"
                 Foreground="SteelBlue" />


        <!-- Conteúdo principal -->
        <Grid>
            <ScrollViewer>
                <ListView ItemsSource="{Binding Sensores}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Hardware" DisplayMemberBinding="{Binding HardwareName}" />
                            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding SensorType}" />
                            <GridViewColumn Header="Sensor" DisplayMemberBinding="{Binding SensorName}" />
                            <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
