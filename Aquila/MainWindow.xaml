<Window x:Class="Aquila.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aquila"
        mc:Ignorable="d"
        Title="Aquila" Height="450" Width="800">

    <DockPanel LastChildFill="True">
        <!-- Versão no canto inferior esquerdo -->
        <TextBlock x:Name="versionTextBlock"
                   DockPanel.Dock="Bottom"
                   Margin="10"
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Left"
                    />

        <!-- Conteúdo principal -->
        <Grid>
            <ScrollViewer>
                <ListView ItemsSource="{Binding Sensores}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Hardware" DisplayMemberBinding="{Binding HardwareName}" />
                            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding SensorType}" />
                            <GridViewColumn Header="Sensor" DisplayMemberBinding="{Binding SensorName}" />
                            <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
